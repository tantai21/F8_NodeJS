<div class="mt-4">
  <h3>Đăng ký khoá học</h3>
  <form method="POST" action="/courses/store">
    <div class="form-group">
      <label for="exampleInputEmail1">Tên khoá học</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        placeholder="Nhập tên khoá học"
      />
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Thông tin khoá học</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
        placeholder="Mô tả khoá học "
      />
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Video ID</label>
      <input
        type="text"
        class="form-control"
        id="idVideo"
        name="idVideo"
        placeholder="Mô tả khoá học "
      />
    </div>

    <button type="submit" class="btn btn-primary">Đăng ký</button>
  </form>
</div>